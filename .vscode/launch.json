{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:dev"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node-terminal",
      "name": "运行脚本: start:debug",
      "request": "launch",
      "command": "pnpm run start:debug",
      "cwd": "${workspaceFolder}\\packages\\server"
    }
  ]
}