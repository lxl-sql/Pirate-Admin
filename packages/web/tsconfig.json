{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vue-router",
      "vite/client",
      "node"
    ],
    // 允许隐式的any
    "noImplicitAny": false,
    // 严格的null与undefined检查
    "strictNullChecks": true,
    // 防止在switch代码块里的两个case之间忘记添加break语句。
    "noFallthroughCasesInSwitch": true,
    // 允许this有隐式的any类型
    "noImplicitThis": false
  },
  // 读取所有可识别的src目录下的文件
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../server"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
