{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vue-router",
      "vite/client",
      "node"
    ],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": false
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
